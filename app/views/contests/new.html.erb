<%= form_for @contest, html: { class: "form-horizontal question" } do |f| %>

<% if @contest.errors.any? %>
<div id="error_expl" class="panel panel-danger">
	<div class="panel-heading">
		<h3 class="panel-title"><%= pluralize(@contest.errors.count, "error") %> prohibited this question from being saved:</h3>
	</div>
	<div class="panel-body">
		<ul>
			<% @contest.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
</div>
<% end %>


<div class="form-group">
	<%= f.label :title, class: 'control-label col-lg-2' %>
	<div class="col-lg-10">
		<%= f.text_field :title, class: 'form-control col-xs-12 col-sm-12 col-md-6 col-lg-6' %>
	</div>
	<%=f.error_span(:title) %>
</div>

<div class="form-group">
	<%= f.label :description, class: 'control-label col-lg-2' %>
	<div class="col-lg-10">
		<%= f.text_area :description, class: 'form-control col-xs-12 col-sm-12 col-md-6 col-lg-6' %>
	</div>
	<%=f.error_span(:description) %>
</div>

<div class="form-group">
	<%= f.label :start_time, class: 'control-label col-xs-12 col-sm-12 col-lg-2' %>
	<div class="col-lg-10">
		<%= f.datetime_select :start_time, use_month_numbers: true, start_year: Time.now.year, end_year: Time.now.year, minute_step: 30, class: 'form-control' %>
	</div>
</div>

<div class="form-group">
	<%= f.label :contest_length, class: 'control-label col-xs-12 col-sm-12 col-lg-2' %>
	<div class="col-lg-10">
		<%= f.select :contest_length, [["1hour",1], ["2hours",2], ["3hours",3]], class: 'form-control' %>
	</div>
</div>

<div class="form-group">
	<%= f.label :level1_question, class: 'control-label col-xs-12 col-sm-12 col-lg-2' %>
	<div class="col-lg-10">
		<%= f.select :level1_question, @level1_questions.map{|v| ["#{v.title} level #{v.question_level.to_i}", v.id] }, include_blank: true, class: 'form-control' %>
	</div>
</div>

<div class="form-group">
	<%= f.label :level2_question, class: 'control-label col-xs-12 col-sm-12 col-lg-2' %>
	<div class="col-lg-10">
		<%= f.select :level2_question, @level2_questions.map{|v| ["#{v.title} level #{v.question_level.to_i}", v.id] }, include_blank: true, class: 'form-control' %>
	</div>
</div>

<div class="form-group">
	<%= f.label :level3_question, class: 'control-label col-xs-12 col-sm-12 col-lg-2' %>
	<div class="col-lg-10">
		<%= f.select :level3_question, @level3_questions.map{|v| ["#{v.title} level #{v.question_level.to_i}", v.id] }, 
		include_blank: true, class: 'form-control' %>
	</div>
</div>

<div class="form-group">
	<%= f.label :level4_question, class: 'control-label col-xs-12 col-sm-12 col-lg-2' %>
	<div class="col-lg-10">
		<%= f.select :level4_question, @level4_questions.map{|v| ["#{v.title} level #{v.question_level.to_i}", v.id] }, include_blank: true, class: 'form-control' %>
	</div>
</div>

<div class="form-group">
	<%= f.label :level5_question, class: 'control-label col-xs-12 col-sm-12 col-lg-2' %>
	<div class="col-lg-10">
		<%= f.select :level5_question, @level5_questions.map{|v| ["#{v.title} level #{v.question_level.to_i}", v] },
		 include_blank: true, class: 'form-control' %>
	</div>
</div>


<div class="form-group">
	<div class="col-lg-offset-2 col-lg-10" style="margin-bottom: 30px">
		<%= f.submit "Create Contest", data: { confirm:  "一度作成したコンテストは修正、削除ができません\n作成をする前に確認をしましたか？" }, class: 'btn btn-primary btn-lg' %>
	</div>
</div>
<% end %>

