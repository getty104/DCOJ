<h2 class="col-md-offset-3">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-horizontal user" }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "New password", class: "control-label col-xs-12 col-sm-12 col-md-2 col-md-offset-2" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "control-label col-xs-12 col-sm-12 col-md-2" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm new password", class: "control-label col-xs-12 col-sm-12 col-md-2 col-md-offset-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "control-label col-xs-12 col-sm-12 col-md-2" %>
  </div>

  <div class="form-group">
    <%= f.submit "Send me reset password instructions", class: 'btn btn-primary col-xs-12 col-sm-12 col-md-3 col-md-offset-4' %>
</div>
<% end %>
