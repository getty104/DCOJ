<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal user" }) do |f| %>
  <%= devise_error_messages! %>

<div class="form-group">
  <%= f.label :name, class: 'control-label col-xs-12 col-sm-12 col-lg-2' %>
  <div class="col-lg-4">
    <%= f.text_field :name, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :account, class: 'control-label col-xs-12 col-sm-12 col-lg-2' %>
  <div class="col-lg-4">
    <%= f.text_field :account, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :email, class: 'control-label col-xs-12 col-sm-12 col-lg-2' %>
  <div class="col-lg-4">
    <%= f.email_field :email,  autofocus: true, class: 'form-control' %>
  </div>
</div>
<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>


<div class="form-group">
  <%= f.label :password, class: 'control-label col-xs-12 col-sm-12 col-lg-2' %>
  <i>(leave blank if you don't want to change it)</i><br />
  <div class="col-lg-4">
    <%= f.password_field :password, autocomplete: "off",  class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :password_confirmation, class: 'control-label col-xs-12 col-sm-12 col-lg-2' %>
  <div class="col-lg-4">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%# f.label :image, class: 'control-label col-xs-12 col-sm-12 col-lg-2' %>
  <div class="col-lg-4">
    <%# f.file_field :image, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
 <%= f.label :current_password, class: 'control-label col-xs-12 col-sm-12 col-lg-2' %> 
 <i>(we need your current password to confirm your changes)</i><br />
  <div class="col-lg-4">
    <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <div class="col-md-offset-2 col-xs-12 col-sm-12 col-md-4 col-md-offset-2">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= link_to t('.cancel', default: t("helpers.links.cancel")),
    current_user, class: 'btn btn-default' %>
  </div>
</div>

<% end %>


<%= link_to "Delete Account", registration_path(resource_name), method: :delete, data: { confirm:  "一度削除したアカウントのデータは復元できません。\n本当に削除しますか？" },
    class: 'btn btn-danger btn-lg col-xs-12 col-sm-12 col-md-2 col-md-offset-2' %>
