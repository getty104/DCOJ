<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "form-horizontal user" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
  <%= f.label :email, class: 'control-label col-xs-12 col-sm-12 col-lg-2' %>
  <div class="col-lg-4">
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <div class="col-lg-offset-2 col-xs-12 col-sm-12 col-lg-4">
    <%= f.submit "Send me reset password instructions", class: 'btn btn-primary' %>
    <%= link_to t('.cancel', default: t("helpers.links.cancel")),
    :back, class: 'btn btn-default' %>
  </div>
</div>
<% end %>

