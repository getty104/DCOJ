


<%= form_tag submit_path, method: "post", multipart: true, html: {class: "form-horizontal"} do %>

<div class="form-group">
	<%= label_tag "language" ,"", class: 'control-label' %>
	
		<%= select_tag :lang, options_for_select([["c","c"], ["c++","c++"], ["ruby","ruby"],["java", "java"]]), autofocus: 'true' ,class: 'form-control' %>
	
</div>

<div class="form-group">
	<%= label_tag "コードを提出" %>
	
		<%= file_field_tag :ans, class: 'form-control' %>

</div>

<div class="form-group">
	<%= submit_tag "Submit", class: 'btn btn-primary' %>
</div>
<% end %>
