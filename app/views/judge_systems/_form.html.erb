<%= form_for :judge_system, url: submission_path, html: { class: "form-horizontal question" } do |f| %>

<p>問題: <%= @question.title %></p>
<%= f.hidden_field :question_id, value: @question.id %>

<div class="form-group">
	<%= f.label :language, class: 'control-label col-xs-12 col-sm-12 col-md-2' %>
	<div class="col-lg-10">
		<%= f.select :lang, [["c","c"], ["c++","c++"], ["ruby","ruby"],["java", "java"]], class: 'form-control' %>
	</div>
</div>

<div class="form-group">
	<%= f.label "program code", class: 'control-label col-lg-2' %>
	<div class="col-lg-10">
		<%= f.file_field :ans, class: 'form-control' %>
	</div>
	<%=f.error_span(:ans) %>
</div>

<div class="form-group">
	<div class="col-lg-offset-2 col-lg-10">
		<%= f.submit "Submit", class: 'btn btn-primary' %>
		<%= link_to t('.cancel', default: t("helpers.links.cancel")),
		@question, class: 'btn btn-default' %>
	</div>
</div>

<% end %>
