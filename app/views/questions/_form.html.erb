<%= form_for @question, html: { class: "form-horizontal question" } do |f| %>

<% if @question.errors.any? %>
<div id="error_expl" class="panel panel-danger">
    <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h3>
    </div>
    <div class="panel-body">
        <ul>
            <% @question.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
</div>
<% end %>
<p>記号は$$の間に書き込んでください <%= link_to "記号一覧はこちら","http://www002.upp.so-net.ne.jp/latex/kigou_all.html", target: ["_blank"] %></p>
<div class="form-group">
    <%= f.label "タイトル", class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
        <%= f.text_field :title, class: 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
</div>

<div class="form-group">
    <%= f.label "問題文", class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
        <%= f.text_area :content, class: 'form-control', size: '60x15' %>
    </div>
    <%=f.error_span(:content) %>
</div>

<div class="form-group">
    <%= f.label "インプット", class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
        <%= f.file_field :i_data, class: 'form-control' %>
    </div>
    <%=f.error_span(:i_data) %>
</div>

<div class="form-group">
    <%= f.label "アウトプット", class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
        <%= f.file_field :o_data, class: 'form-control' %>
    </div>
    <%=f.error_span(:o_data) %>
</div>

<% unless @question.question_level %>
<div class="form-group">
    <%= f.label "問題レベル", class: 'control-label col-lg-2' %>
    <div class="btn-group" data-toggle="buttons">
    <label class="btn btn-warning active">
       <%= f.radio_button :question_level, 1, autocomplete: "off" %>1
   </label>
   <label class="btn btn-warning">
       <%= f.radio_button :question_level, 2, autocomplete: "off" %>2
   </label>
   <label class="btn btn-warning">
       <%= f.radio_button :question_level, 3, autocomplete: "off" %>3
   </label>
   <label class="btn btn-warning">
       <%= f.radio_button :question_level, 4, autocomplete: "off" %>4
   </label>
   <label class="btn btn-warning">
       <%= f.radio_button :question_level, 5, autocomplete: "off" %>5
   </label>
       
   </label>
   </div>
   <%=f.error_span(:question_level) %>
</div>
<% end %>
<div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit nil, class: 'btn btn-primary' %>
    </div>
</div>
<% end %>
