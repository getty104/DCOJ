<%= form_for @question, html: { class: "form-horizontal question" } do |f| %>

<% if @question.errors.any? %>
<div id="error_expl" class="panel panel-danger">
	<div class="panel-heading">
		<h3 class="panel-title"><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h3>
	</div>
	<div class="panel-body">
		<ul>
			<% @question.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
</div>
<% end %>
<p>記号は$$の間に書き込んでください <%= link_to "記号一覧はこちら","http://www1.kiy.jp/~yoka/LaTeX/latex.html", target: ["_blank"] %></p>
<p>フォーマットは<%=link_to "Tutorial", question_path(Question.where(title: "Tutorial"))%>に従ってください</p>

<div class="form-group">
	<% f.label "image(not must)", class: 'control-label col-xs-12 col-sm-12 col-lg-2' %>
	<div class="col-lg-10">
		<% f.file_field :image, class: 'form-control' %>
	</div>
</div>
<%= f.hidden_field :image_cache %>

<div class="form-group">
	<%= f.label "title", class: 'control-label col-lg-2' %>
	<div class="col-lg-10">
		<%= f.text_field :title, class: 'form-control' %>
	</div>
	<%=f.error_span(:title) %>
</div>

<div class="form-group">
	<%= f.label "Problem Statement", class: 'control-label col-lg-2' %>
	<div class="col-lg-10">
		<%= f.text_area :content, class: 'form-control', size: '60x20' %>
	</div>
	<%=f.error_span(:content) %>
</div>

<div class="form-group">
	<%= f.label "Input Format", class: 'control-label col-lg-2' %>
	<div class="col-lg-10">
		<%= f.text_area :input_text, class: 'form-control', size: '60x10' %>
	</div>
	<%=f.error_span(:input_text) %>
</div>

<div class="form-group">
	<%= f.label "Output Format", class: 'control-label col-lg-2' %>
	<div class="col-lg-10">
		<%= f.text_area :output_text, class: 'form-control', size: '60x10' %>
	</div>
	<%=f.error_span(:output_text) %>
</div>

<div class="form-group">
	<%= f.label "Sample Input", class: 'control-label col-lg-2' %>
	<div class="col-lg-10">
		<%= f.text_area :sample_input, class: 'form-control', size: '60x10' %>
	</div>
	<%=f.error_span(:sample_input) %>
</div>

<div class="form-group">
	<%= f.label "Sample Output", class: 'control-label col-lg-2' %>
	<div class="col-lg-10">
		<%= f.text_area :sample_output, class: 'form-control', size: '60x10' %>
	</div>
	<%=f.error_span(:sample_output) %>
</div>

<div class="form-group">
	<%= f.label "Input File", class: 'control-label col-lg-2' %>
	<div class="col-lg-10">
		<%= f.file_field :i_data, class: 'form-control' %>
	</div>
	<%=f.error_span(:i_data) %>
</div>

<div class="form-group">
	<%= f.label "Output File", class: 'control-label col-lg-2' %>
	<div class="col-lg-10">
		<%= f.file_field :o_data, class: 'form-control' %>
	</div>
	<%=f.error_span(:o_data) %>
</div>

<% unless @question.question_level %>
<div class="form-group">
	<%= f.label "Problem Level", class: 'control-label col-lg-2' %>
	<div class="btn-group" data-toggle="buttons">
		<label class="btn btn-warning active">
			<%= f.radio_button :question_level, 1, autocomplete: "off", checked: true %>1
		</label>
		<label class="btn btn-warning">
			<%= f.radio_button :question_level, 2, autocomplete: "off" %>2
		</label>
		<label class="btn btn-warning">
			<%= f.radio_button :question_level, 3, autocomplete: "off" %>3
		</label>
		<label class="btn btn-warning">
			<%= f.radio_button :question_level, 4, autocomplete: "off" %>4
		</label>
		<label class="btn btn-warning">
			<%= f.radio_button :question_level, 5, autocomplete: "off" %>5
		</label>
	</div>
	<%=f.error_span(:question_level) %>
</div>

<div class="form-group">
	<%= f.label "For Contest?", class: 'control-label col-lg-2' %>
	<%= f.radio_button :for_contest, true %> yes
	<%= f.radio_button :for_contest, false,  checked: true %> no
</div>
<% end %>
<div class="form-group">
	<div class="col-lg-offset-2 col-lg-10" style="margin-bottom: 30px">
		<%= f.submit "Create Problem", class: 'btn btn-primary btn-lg' %>
	</div>
</div>
<% end %>
