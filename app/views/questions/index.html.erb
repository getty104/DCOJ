<div class="row">
	<div class="col-xs-12 col-md-4 col-md-offset-8">
		<%= form_tag search_result_path, method: 'get' do %><%#　projects_pathはモデル名で読みかえること %>
		<div class="form-group">
			<%= text_field_tag :search, params[:search], placeholder: "Question name"  %>                 
			<%= submit_tag "Search", title: nil, class: 'btn btn-primary' %>
		</div>
		<% end %>
	</div>
</div>
<h2 class="text-center">Question List</h2>

<div class="row">
	<div class="col-sm-12  col-md-10 col-md-offset-1">
		<ul class="nav nav-tabs" role="tablist">
			<li class="active" role="presentation">
				<a aria-controls="tab_1" data-toggle="tab" href="#tab_1" role="tab" class="table-list">level 1</a>
			</li>
			<li role="presentation">
				<a aria-controls="tab_2" data-toggle="tab" href="#tab_2" role="tab" class="table-list">level 2</a>
			</li>
			<li role="presentation">
				<a aria-controls="tab_3" data-toggle="tab" href="#tab_3" role="tab" class="table-list">level 3</a>
			</li>
			<li role="presentation">
				<a aria-controls="tab_4" data-toggle="tab" href="#tab_4" role="tab" class="table-list">level 4</a>
			</li>
			<li role="presentation">
				<a aria-controls="tab_5" data-toggle="tab" href="#tab_5" role="tab" class="table-list">level 5</a>
			</li>
			<li role="presentation">
				<a aria-controls="tab_6" data-toggle="tab" href="#tab_6" role="tab" class="table-list">for contest</a>
			</li>
		</ul>

		<div class="tab-content">
			<div class="tab-pane fade in active" id="tab_1" role="tabpanel">
				<%= render partial: 'list', locals: { questions: @level1_questions } %>
				<%= paginate @level1_questions, param_name: :level1_page , remote: true %>
			</div>
			<div class="tab-pane fade" id="tab_2" role="tabpanel">
				<%= render partial: 'list', locals: { questions: @level2_questions } %>
				<%= paginate @level2_questions, param_name: :level2_page , remote: true %>
			</div>

			<div class="tab-pane fade" id="tab_3" role="tabpanel">
				<%= render partial: 'list', locals: { questions: @level3_questions } %>
				<%= paginate @level3_questions, param_name: :level3_page , remote: true %>
			</div>

			<div class="tab-pane fade" id="tab_4" role="tabpanel">
				<%= render partial: 'list', locals: { questions: @level4_questions } %>
				<%= paginate @level4_questions, param_name: :level4_page , remote: true %>
			</div>

			<div class="tab-pane fade" id="tab_5" role="tabpanel">
				<%= render partial: 'list', locals: { questions: @level5_questions } %>
				<%= paginate @level5_questions , param_name: :level5_page , remote: true %>
			</div>

				<div class="tab-pane fade" id="tab_6" role="tabpanel">
				<%= render partial: 'list', locals: { questions: @for_contest_questions } %>
				<%= paginate @for_contest_questions, param_name: :for_contest_page , remote: true %>
			</div>

		</div>
	</div>
</div>
