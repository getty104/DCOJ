<% provide(:title, "Show Question") %>

<dl class="dl-horizontal">
  <dt><strong><%= :title %>:</strong></dt>
  <dd><%= @question.title %></dd>
  <dt><strong><%= :content %>:</strong></dt>
  <dd><%= simple_format(hbr(@question.content)) %></dd>
  <dd><%= link_to 'input download', download_input_question_path(@question),class: "btn btn-primary" %></dd>
  <dd class="btn btn-warning"><%= link_to 'submission', controller: 'judge_systems', action: 'new', question_id: @question.id %></dd>
</dl>

<% if request.referer.include?('/questions') %>
 <%= link_to t('.back', default: t("helpers.links.back")),
     questions_path, class: 'btn btn-default'  %>
<% else %>
 <%= link_to '作成したユーザー',
     @question.created_user, class: 'btn btn-default'  %>
<% end %>

<% if current_user == @question.created_user %>
<%= link_to t('.edit', default: t("helpers.links.edit")),
edit_question_path(@question), class: 'btn btn-default' %>
<%= link_to t('.destroy', default: t("helpers.links.destroy")),
question_path(@question),
method: 'delete',
data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
class: 'btn btn-danger' %>
<% end %>

<script>
    MathJax.Hub.Typeset();
</script>