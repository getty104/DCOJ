<h2 class="text-center">Rate Ranking</h2>
<div class="row" style="margin-top: 80px;">
	<div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3">
		<table class="table table-borderd">
		<thead>
		<tr>
			<th>rank</th>
			<th>name</th>
			<th>rate</th>
		</tr>
	</thead>
			<tbody>
				<tr style="background-color:#dcdcdc;">
					<td><%= current_user.rate_rank %></td>
					<td><%= link_to current_user.name, current_user, style: "color: #{rate_color current_user.rate} ;" %></td>
					<td><strong><%= current_user.rate %></strong></td>
				</tr>
				<% @users.each do |user| %>
				<tr>
					<td><%= user.rate_rank %></td>
					<td><%= link_to user.name, user, style: "color: #{rate_color user.rate} ;"  %></td>
					<td style="color:<%= rate_color user.rate %>"><strong><%= user.rate %></strong></td>
				</tr>
				<% end %>
			</tbody>
		</table> 
		<%= paginate @users %>
	</div>
</div>


