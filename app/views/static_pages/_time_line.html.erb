 <% @posts.each do |post| %>
 <% if current_user.following.include?(post.user) || current_user == post.user %>
 <tr>
  <td>
    <%= post.created_at %>
    <br>
    <%="#{post.user.name}さんが"%>
    <br>
    <%= link_to("問題:#{post.question.title}", post.question) %>
    <br>
    <%="を作りました" %>
 </td>
</tr>
<% end %>
<% end %>
