 <table class="table table-borderd" id="lists"> 
	<tbody>
		<% @posts.each do |post| %>
		<% if (current_user.following.include?(post.user) || current_user == post.user) && !post.question.for_contest  %>
		<tr>
			<td>
				<%= date_format post.created_at %>
				<br>
				<%="#{post.user.name}さんが"%>
				<br>
				<%= link_to "問題:#{post.question.title}", post.question %>
				<br>
				<% if post.category == 0 %>
				<%="を作りました" %>
				<% else %>
				<%="でAcceptされました" %>
				<% end %>
			</td>
		</tr>
		<% end %>
		<% end %>
	</tbody>
 </table>
