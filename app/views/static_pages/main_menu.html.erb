<% provide(:title, "Main Menu") %>
<div class="row">
  <div class=" col-md-6" style="margin: 10%; margin-top: 70px; border: 1px solid #c0c0c0; ">
    <%= render partial: 'auto_slide' %>
  </div>

  <div class=" col-md-3">
    <div style="border: 1px solid #c0c0c0; background-color: white; ">
      <h2 class="text-center" >Time Line</h2>
      <div style="height:300px; overflow-y:scroll;">
        <table class="table table-bordered" id="lists"> 
          <tbody>
           <%= render partial: 'time_line' %>
         </tbody>
       </table>
       <div class="btn btn-info col-md-12">
        <%= link_to_next_page( @posts, 'more', remote: true, id: 'view_more') %>
      </div>
      
    </div>
  </div>

  <div style="border: 1px solid #c0c0c0; background-color: white; margin-top:10px;">
   <h2 class="text-center" >Update Info</h2>
   <div style="height:200px; overflow-y:scroll;">
     <%= render partial: 'update_info' %>
   </div>
 </div>
</div>
</div>

<div class="row">
  <div class=" col-md-5 col-md-offset-1">
      <%= render partial: 'ranking_list', locals: { users: @created_users, title: "Best Creaters Ranking" } %>
  </div>
  <div class=" col-md-5">
      <%= render partial: 'ranking_list', locals: { users: @solved_users, title: "Best Answerers Ranking" } %>
  </div>
</div>










