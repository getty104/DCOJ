<div class="row">

	<div class="col-xs-12 col-sm-12 col-md-12" style=" border: 1px solid #c0c0c0; ">
		<%= render partial: 'auto_slide' %>
	</div>
</div>
<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<div class="col-xs-12 col-sm-12 col-md-4">
			<div style="border: 1px solid #c0c0c0; background-color: white; margin-top:80px; ">
				<h2 class="text-center" >Time Line</h2>
				<div style="height:300px; overflow-y:scroll; -webkit-overflow-scrolling: touch;">
					<%= render partial: 'time_line' %>
					<%= link_to_next_page( @posts, 'more', remote: true, id: 'view_more1', class: "btn btn-info col-xs-12 col-sm-12 col-md-12") %>
				</div>  
			</div>
		</div>

		<div class="col-xs-12 col-sm-12 col-md-4">
			<div style="border: 1px solid #c0c0c0; background-color: white; margin-top:80px;">
				<h2 class="text-center" >Now Contests</h2>
				<div style="height:300px; overflow-y:scroll; -webkit-overflow-scrolling: touch;">
					<%= render partial: 'now_contest' %>
				</div>
			</div>
		</div>

		<div class="col-xs-12 col-sm-12 col-md-4">
			<div style="border: 1px solid #c0c0c0; background-color: white; margin-top:80px;">
				<h2 class="text-center" >Comming Up Contests</h2>
				<div style="height:300px; overflow-y:scroll; -webkit-overflow-scrolling: touch;">
						<%= render partial: 'contest_list' %>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="row" style="margin-top: 80px;">
	<div class="col-xs-12 col-sm-12 col-md-8 col-md-offset-2">
		<%= render partial: 'create_ranking_list' %>
	</div>
</div>
<div class="row" style="margin-top: 80px; margin-bottom: 80px;">
	<div class="col-xs-12 col-sm-12 col-md-8 col-md-offset-2">
		<%= render partial: 'solve_ranking_list' %>
	</div>
</div>
</div>










