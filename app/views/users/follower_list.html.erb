<% provide(:title, "Followers") %>
<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-3 col-md-offset-3">
    <h1> <%= fa_icon "user" %> Follower List</h1>
  </div>
</div>
<div class="row">
 <div class="col-xs-12  col-sm-12 col-md-6 col-md-offset-3">
  <% @users.each do |user| %>
    <%= link_to image_tag(user_icon(user), class: "col-xs-4 col-sm-4 col-md-4"), user %>
  <% end %>
</div>
<%= paginate @users %>
</div>
