<% provide(:title, "Following") %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= :name %></th>
    <th><%= :action %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
         <td><%=link_to "詳細",user, class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

