<%- model_class = User -%>
<% provide(:title, "User Profile") %>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:account) %>:</strong></dt>
  <dd><%= @user.account %></dd>
  <dt><strong><%= model_class.human_attribute_name("作成した問題数") %>:</strong></dt>
  <dd><%= @user.create_questions.length%></dd>
  <dt><strong><%= model_class.human_attribute_name("正答した問題数") %>:</strong></dt>
  <dd><%= @user.solved_question_number %></dd>
</dl>

<p>作成した問題</p>
<div id="create_questions">
  <%= render partial: 'questions/list', locals: { questions: @create_questions, level_page:  
    :create_questions_page } %>
  </div>

  <p>解いた問題</p>
  <div id="solve_questions">
    <%= render partial: 'questions/list', locals: { questions: @solve_questions, level_page:  
      :solve_questions_page } %>
    </div>

    <p>今までの記録</p>
    <div id="records">
      <%= render partial: 'log_list' %>
    </div>

    <% if current_user == @user %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
    edit_user_path(@user), :class => 'btn btn-default' %>

    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
    user_path(@user),
    :method => 'delete',
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
    :class => 'btn btn-danger' %>
    <% end %>