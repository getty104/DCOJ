<% provide(:title, "User Profile") %>
<dl class="dl-horizontal">
  <dt><strong><%= :name %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= :account %>:</strong></dt>
  <dd><%= @user.account %></dd>
  <dt><strong><%= "作成した問題数" %>:</strong></dt>
  <dd><%= @user.create_questions.length%></dd>
  <dt><strong><%= "正答した問題数" %>:</strong></dt>
  <dd><%= @user.solved_question_number %></dd>
</dl>
<% unless current_user == @user %>
<div id="follow_form">
  <% if current_user.following?(@user) %>
  <%= render partial: 'unfollow' %>
  <% else %>
  <%= render partial: 'follow' %>
  <% end %>
</div>
<% end %>

<h2 class="text-center">作成した問題</h2>
<div id="create_questions">
  <%= render partial: 'question_list', locals: { questions: @create_questions, level_page:  
    :create_questions_page } %>
  </div>

  <h2 class="text-center">解いた問題</h2>
  <div  id="solve_questions" style="table-layout:fixed;">
    <%= render partial: 'question_list', locals: { questions: @solve_questions, level_page:  
      :solve_questions_page } %>
    </div>

    <h2 class="text-center">今までの記録</h2>
    <div  id="records">
      <%= render partial: 'log_list' %>
    </div>

    <% if current_user == @user %>
    <%= link_to t('.edit', default: t("helpers.links.edit")),
    edit_user_path(@user), class: 'btn btn-default' %>

    <%= link_to t('.destroy', default: t("helpers.links.destroy")),
    user_path(@user),
    method: 'delete',
    data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
    class: 'btn btn-danger' %>
    <% end %>