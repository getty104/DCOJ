<% provide(:title, "User Profile") %>
<div class="row">
  <dl class="dl-horizontal">
    <dt><strong><%= :name %>:</strong></dt>
    <dd><%= @user.name %></dd>
    <dt><strong><%= :account %>:</strong></dt>
    <dd><%= @user.account %></dd>
    <dt><strong><%= "作成した問題数" %>:</strong></dt>
    <dd><%= @user.create_questions.length%></dd>
    <dt><strong><%= "正答した問題数" %>:</strong></dt>
    <dd><%= @user.solved_question_number %></dd>
  </dl>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-2">
    <% unless current_user == @user %>
    <div class="row">
      <div id="follow_form" class="pull-left">
        <% if current_user.following?(@user) %>
        <%= render partial: 'unfollow' %>
        <% else %>
        <%= render partial: 'follow' %>
        <% end %>
      </div>

      <div id="block_form" class="pull-left">
        <% if current_user.blocking?(@user) %>
        <%= render partial: 'unblock' %>
        <% else %>
        <%= render partial: 'block' %>
        <% end %>
      </div>
    </div>
    <% else %>
    <%= link_to "Edit", edit_user_path(@user), class: 'btn btn-default btn-lg' %>
    <%= link_to "Destroy", user_path(@user), method: 'delete', data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
    class: 'btn btn-danger btn-lg' %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class=" col-md-5 col-md-offset-1">
    <h2 class="text-center">Created Questions</h2>
    <div id="create_questions">
      <%= render partial: 'question_list', locals: { questions: @create_questions, level_page:  
        :create_questions_page } %>
      </div>
    </div>

    <div class="col-md-5">
      <h2 class="text-center">Solved Questions</h2>
      <div  id="solve_questions">
        <%= render partial: 'question_list', locals: { questions: @solve_questions, level_page:  
          :solve_questions_page } %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h2 class="text-center">Logs</h2>
        <div  id="records">
          <%= render partial: 'log_list' %>
        </div>
      </div>
    </div>